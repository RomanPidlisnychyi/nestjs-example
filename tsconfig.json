{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "types": [],
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": false
  },
  "exclude": ["node_modules", "dist"]
}
